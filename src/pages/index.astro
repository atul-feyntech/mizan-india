---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/product/ProductCard.astro';
import productsData from '../data/products.json';
import categoriesData from '../data/categories.json';
import type { Product, Category } from '../types';

const products = productsData.products as Product[];
const categories = categoriesData.categories as Category[];

// Sort products by score
const sortedByScore = [...products].sort((a, b) => a.mizan_score.stars - b.mizan_score.stars);
const worstProducts = sortedByScore.slice(0, 4);
const bestProducts = sortedByScore.slice(-4).reverse();

// Trending searches
const trendingSearches = ['Maggi', 'Bournvita', 'Kurkure', 'Parle-G', 'Coca-Cola'];

// Simplified product data for client-side search (minimal fields only)
const searchableProducts = products.slice(0, 500).map(p => ({
  name: p.name,
  brand: p.brand,
  category: p.category,
  slug: p.slug,
  stars: p.mizan_score?.stars ?? 0
}));
---

<BaseLayout
  title="Mizan - Ab tolo, phir khao | Indian Packaged Food Health Ratings"
  description="Mizan weighs your packaged food's true health impact. Search 100+ Indian products with honest ratings, safe limits, and witty verdicts. Free forever."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-mizan-teal to-[#094449] text-white py-16 md:py-24">
    <div class="container mx-auto px-4 text-center">
      <div class="text-6xl mb-4">‚öñÔ∏è</div>
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold mb-2">MIZAN</h1>
      <p class="text-xl md:text-2xl text-white/90 mb-8">Measure, then Eat.</p>
      <p class="text-sm text-white/70 mb-8 max-w-md mx-auto">
        The scale that weighs your packaged food's true worth. Not the marketing, the reality.
      </p>

      <!-- Search Box -->
      <div id="search" class="max-w-2xl mx-auto mb-6">
        <div class="relative">
          <span class="absolute left-5 top-1/2 -translate-y-1/2 text-gray-400 text-xl">üîç</span>
          <input
            type="search"
            id="search-input"
            placeholder="Search for any packaged food..."
            class="w-full py-4 px-14 bg-white text-gray-900 rounded-full text-lg focus:outline-none focus:ring-4 focus:ring-gold-accent/50 shadow-lg"
            autocomplete="off"
          />
        </div>
        <!-- Search Results -->
