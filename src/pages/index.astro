            <span class="text-gray-500 text-sm">(Warning)</span>
          </div>
          <div class="grid grid-cols-2 gap-4">
            {worstProducts.map((product) => (
              <ProductCard product={product} variant="compact" />
            ))}
          </div>
          <a href="/worst" class="inline-flex items-center gap-1 mt-4 text-mizan-teal hover:text-mizan-teal-dark font-medium text-sm">
            See all <span>‚Üí</span>
          </a>
        </div>

        <!-- Better Options -->
        <div>
          <div class="flex items-center gap-2 mb-6">
            <span class="text-2xl">‚úÖ</span>
            <h2 class="font-heading text-2xl font-bold text-gray-900">BETTER CHOICES</h2>
            <span class="text-gray-500 text-sm">(Safe Options)</span>
          </div>
          <div class="grid grid-cols-2 gap-4">
            {bestProducts.map((product) => (
              <ProductCard product={product} variant="compact" />
            ))}
          </div>
          <a href="/better" class="inline-flex items-center gap-1 mt-4 text-green-safe hover:text-green-light font-medium text-sm">
            See more <span>‚Üí</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-2 mb-6">
        <span class="text-2xl">üìä</span>
        <h2 class="font-heading text-2xl font-bold text-gray-900">CATEGORIES</h2>
      </div>
      <div class="flex flex-wrap gap-3">
        {categories.map((category) => (
          <a
            href={`/category/${category.slug}`}
            class="flex items-center gap-2 px-4 py-2 bg-warm-white rounded-full hover:bg-mizan-teal hover:text-white transition-colors border border-gray-200"
          >
